<?xml version="1.0" encoding="UTF-8"?>
<action-controller>
	<action>
		<name>login</name>
		<class>
			<cname>loginAction</cname>
			<method>login</method>
		</class>
		<result>
			<rname>success</rname>
			<type>forward</type>
			<value>jsp/login_success.jsp</value>
		</result>
		<result>
			<rname>fail</rname>
			<type>redirect</type>
			<value>jsp/login_fail.jsp</value>
		</result>
	</action>
	<action>
		<name>register</name>
		<class>
			<cname>com.servlet.action.RegisterAction</cname>
			<method>register</method>
		</class>
		<result>
			<rname>success</rname>
			<type>forward</type>
			<value>jsp/register_success.jsp</value>
		</result>
		<result>
			<rname>fail</rname>
			<type>redirect</type>
			<value>jsp/register.jsp</value>
		</result>
	</action>
</action-controller>